#!/bin/bash
#
# exports.sh
#
# Josh Newman - 2014
#


# SCRIPTS PATH
export PATH=$HOME/.dotfiles/scripts

# MASSIVE PATH EXPORT
export PATH="/Library/Java/JavaVirtualMachines/jdk1.7.0_51.jdk/Contents/Home/bin:/usr/local/bin:/usr/bin:/bin:/usr/sbin:/sbin:/opt/X11/bin:$PATH"
export PATH="$PATH:/Users/josh/.rvm/gems/ruby-2.2.2/bin:/Users/josh/.rvm/gems/ruby-2.2.2@global/bin:/Users/josh/.rvm/rubies/ruby-2.2.2/bin:/Users/josh/.rvm/bin"

# Postgres
export PATH="$PATH:/Applications/Postgres.app/Contents/Versions/9.4/bin"

# JAVA PATHS
export JAVA_HOME=/Library/Java/JavaVirtualMachines/jdk1.7.0_51.jdk/Contents/Home
export PATH=$JAVA_HOME/bin:$PATH

# FOLDER PATHS
export RAILS_WORKSPACE='~/Dropbox/Development/Rails_Workspace'
export DB_WORKSPACE=~/Google\ Drive/University\ Work/2014_Sem1/3612ICT_Database\ Systems\ and\ Admin/

# Preferred editor for local and remote sessions
if [[ -n $SSH_CONNECTION ]]; then
 export EDITOR='vim'
else
 export EDITOR='subl'
fi
